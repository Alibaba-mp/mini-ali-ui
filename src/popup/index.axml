<view class="am-popup {{className}} {{show ? 'am-popup-show' : ''}} {{ animation ? 'animation': '' }}" disable-scroll="{{disableScroll}}" style="{{zIndex ? `z-index: ${zIndex};` : ''}}">
  <view class="am-popup-mask" a:if="{{mask}}" onTap="onMaskTap" style="{{zIndex ? `z-index: ${zIndex};` : ''}}"></view>
  <view class="am-popup-content am-popup-{{position}}" style="{{zIndex ? `z-index: ${zIndex};` : ''}}">
    <slot />
  </view>
</view>